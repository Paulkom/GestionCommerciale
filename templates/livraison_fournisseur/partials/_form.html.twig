{{ form_start(form) }}
        <div class="row">
            <div class="mb-5 fv-row fv-plugins-icon-container col">
                {{ form_label(form.dateAppro) }}
                {{ form_widget(form.dateAppro) }}
                <div class="fv-plugins-message-container invalid-feedback"></div>
            </div>
            <div class="mb-5 fv-row fv-plugins-icon-container col">
                {{ form_label(form.montantTotal) }}
                {{ form_widget(form.montantTotal) }}
                <div class="fv-plugins-message-container invalid-feedback"></div>
            </div>
        </div>
        


        <div class="scroll-y me-n5 pe-5 h-300px h-xl-auto" data-kt-scroll="true" data-kt-scroll-activate="{default: false, lg: true}" data-kt-scroll-max-height="auto" data-kt-scroll-dependencies="#kt_header, #kt_toolbar, #kt_footer, #kt_contacts_list_header" data-kt-scroll-wrappers="#kt_content, #kt_contacts_list_body" data-kt-scroll-stretch="#kt_contacts_list, #kt_contacts_main" data-kt-scroll-offset="5px">
            
            <div class="table-responsive">
                <!--begin::Table-->
                <table class="table align-middle table-row-dashed fs-6 gy-5 child_entity_table"
                        data-url="{{ path('app_load_data_ajax', {'class':'produitCondAppro'}) }}"
                        data-entity-name="produitCondAppro"
                        data-table-columns="id;produit:produit#refProd;conditionnement:conditionnement#codeCond;qteStockCond">
                    <!--begin::Table head-->
                    <thead>
                    <!--begin::Table row-->
                    <tr class="text-start text-gray-400 fw-bolder fs-7 text-uppercase gs-0">
                        <th class="w-125px">Produit</th>
                        <th class="w-80px">Qt√©</th>
                        <th class="w-140px">Prix Achat</th>
                        <th class="min-w-100px"></th>
                    </tr>
                    <!--end::Table row-->
                    </thead>
                    <!--end::Table head-->
                    <!--begin::Table body-->
                    <tbody class="fw-bold text-gray-600 collection-form" data-index="{{ form.produitCondAppros|length > 0 ? form.produitCondAppros|last.vars.name + 1 : 0 }}"
                            data-prototype="{% autoescape 'html' %}{{ include('approvisionnement/partials/_procond.prototype.html.twig',
                        { 'form': form.produitCondAppros.vars.prototype, 'class':'produitCondAppro' })|escape }}{% endautoescape %}">
                        {% for m in form.produitCondAppros %}
                            <tr class="ligne">
                                {{ include('approvisionnement/partials/_procond.prototype.html.twig',
                                    { 'form': m, 'class':'produitCondAppro' }) }}
                            </tr>
                        {% endfor %}
                    </tbody>
                    <!--end::Table body-->
                </table>
                <!--end::Table-->
            </div>
            <div class="form-group my-2">
                <a href="javascript:;" class="btn btn-light-primary add_item_link" data-collection-holder-class="collection-form" onclick="montantTotal();">
                    <i class="la la-plus"></i>Ajouter
                </a>
            </div>
        </div>

        <div class="separator mb-4"></div>
        <div class="mb-5  d-flex justify-content-end">
            <!--begin::Button-->
            <button type="reset" data-kt-cond-type="cancel" class="btn btn-light me-3">Vider</button>
            <!--end::Button-->
            <button type="submit" class="btn btn-primary">Enregistrer</button>
        </div>
    
{{ form_end(form) }} 

