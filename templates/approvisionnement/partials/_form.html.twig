{{ form_start(form) }}
        <div class="row">
            <div class="mb-5 fv-row fv-plugins-icon-container col">
                {{ form_label(form.dateAppro) }}
                {{ form_widget(form.dateAppro) }}
                <div class="fv-plugins-message-container invalid-feedback"></div>
            </div>
            <div class="mb-5 fv-row fv-plugins-icon-container col">
                {{ form_label(form.fournisseur) }}
                {{ form_widget(form.fournisseur) }}
                <div class="fv-plugins-message-container invalid-feedback"></div>
            </div>
            <div class="mb-5 fv-row fv-plugins-icon-container col">
                {{ form_label(form.reference) }}
                {{ form_widget(form.reference) }}
                <div class="fv-plugins-message-container invalid-feedback"></div>
            </div>
            <div class="mb-5 fv-row fv-plugins-icon-container col">
                {{ form_label(form.montantTotal) }}
                {{ form_widget(form.montantTotal) }}
                <div class="fv-plugins-message-container invalid-feedback"></div>
            </div>
        </div>

        
        {% set prefix = 'collection-form___' ~ form.approMagasins.vars.name ~ '__' %}
        <div class="row collection-form" data-collection-key = "__{{ form.approMagasins.vars.name }}__"
            data-collection-prefix="{{ prefix }}"
            data-collection-surname="magasin"
            data-index="{{ form.approMagasins|length > 0 ? form.approMagasins|last.vars.name + 1 : 0 }}"
            data-prototype="{% autoescape 'html' %}{{ include('approvisionnement/partials/_appromag.prototype.html.twig',
                { 'form': form.approMagasins.vars.prototype, 'class':'approMagasin', 'prefix':prefix })|escape }}{% endautoescape %}">
            {% for key,m in form.approMagasins %}
                <div class="ligne form-child" data-index="{{ key }}" id="{{ prefix }}">
                    {{ include('approvisionnement/partials/_appromag.prototype.html.twig',
                        { 'form': m, 'class':'approMagasin', 'prefix':prefix }) }}
                </div>
            {% endfor %}
        </div>


        <div class="form-group mb-6 col mt-2">
        <button type="button" class="btn btn-light-primary add_item_link o" 
            data-collection-holder-class="collection-form">
            <i class="la la-plus"></i>Ajouter un magasin
        </button>
        {# <a href="javascript:;" class="btn btn-light-primary add_item_link"
            data-collection-holder-class="collection-form">
            <i class="la la-plus"></i>Ajouter un magasin
        </a> #}
        </div>
        


        <div class="separator mb-4"></div>
        <div class="mb-5  d-flex justify-content-end">
            <!--begin::Button-->
            <button type="reset" data-kt-cond-type="cancel" class="btn btn-light me-3">Vider</button>
            <!--end::Button-->
            {# <button type="submit" id="condi_submit" data-kt-cond-type="submit" class="btn btn-primary" disabled="disabled"> #}
            <button type="submit" id="condi_submit" data-kt-cond-type="submit" class="btn btn-primary">
                <span class="indicator-label">Enregistrer</span>
                <span class="indicator-progress">Veuillez patienter svp...
                    <span class="spinner-border spinner-border-sm align-middle ms-2"></span>
                </span>
            </button>
        </div>
    
{{ form_end(form) }} 

