{% block javascripts %}
    {{ parent() }}
    <script>
        function montantTotal(){
            setTimeout(function() { 

                $(container).find('form').find('tr.ligne').each(function(){
                    var tr = $(this);
                    $(this).find('.num').on('keyup', function(){
                       tr.find('input.montanLigne').val( tr.find('.qte').val() * tr.find('.mtn').val() );
                    })
                });

                $(container).find('form').find('.num').on('keyup', function(){
                    var total = 0;
                    $(container).find('form').find('tr.ligne').each(function(){
                        total += parseInt($(this).find('input.montanLigne').val());
                    });
                    console.log($('.total'));
                    console.log(total);
                    $('.total').val(total);
                })

            }, 100);
        }
      
    </script>
    
