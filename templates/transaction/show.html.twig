{% extends 'base.html.twig' %}

{% block title %}Transaction{% endblock %}

{% block body %}
    <h1>Transaction</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ transaction.id }}</td>
            </tr>
            <tr>
                <th>DateTransac</th>
                <td>{{ transaction.dateTransac ? transaction.dateTransac|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>RefTransac</th>
                <td>{{ transaction.refTransac }}</td>
            </tr>
            <tr>
                <th>MontantTransac</th>
                <td>{{ transaction.montantTransac }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ transaction.createdAt ? transaction.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ transaction.updatedAt ? transaction.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>DeletedAt</th>
                <td>{{ transaction.deletedAt ? transaction.deletedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_transaction_index') }}">back to list</a>

    <a href="{{ path('app_transaction_edit', {'id': transaction.id}) }}">edit</a>

    {{ include('transaction/_delete_form.html.twig') }}
{% endblock %}
