{% extends 'base.html.twig' %}

{% block title %}Menu{% endblock %}

{% block body %}
    <h1>Menu</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ menu.id }}</td>
            </tr>
            <tr>
                <th>SousTitre</th>
                <td>{{ menu.sousTitre }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ menu.titre }}</td>
            </tr>
            <tr>
                <th>Url</th>
                <td>{{ menu.url }}</td>
            </tr>
            <tr>
                <th>Active</th>
                <td>{{ menu.active ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Icon</th>
                <td>{{ menu.icon }}</td>
            </tr>
            <tr>
                <th>TypeMenu</th>
                <td>{{ menu.typeMenu }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_menu_index') }}">back to list</a>

    <a href="{{ path('app_menu_edit', {'id': menu.id}) }}">edit</a>

    {{ include('menu/_delete_form.html.twig') }}
{% endblock %}
