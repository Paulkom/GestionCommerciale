{% extends 'base.html.twig' %}

{% block title %}Utilisateurs{% endblock %}

{% block body %}
    <div class="content d-flex flex-column flex-column-fluid" id="kt_content">
        <!--begin::Toolbar-->
        <div class="toolbar" id="kt_toolbar">
            <!--begin::Container-->
            <div id="kt_toolbar_container" class="container-fluid d-flex flex-stack">
                <!--begin::Page title-->
                <div data-kt-swapper="true" data-kt-swapper-mode="prepend" data-kt-swapper-parent="{default: '#kt_content_container', 'lg': '#kt_toolbar_container'}" class="page-title d-flex align-items-center flex-wrap me-3 mb-5 mb-lg-0">
                    <!--begin::Title-->
                    <h1 class="d-flex text-dark fw-bolder fs-3 align-items-center my-1">Utilisateur</h1>
                    <!--end::Title-->
                    <!--begin::Separator-->
                    <span class="h-20px border-gray-300 border-start mx-4"></span>
                    <!--end::Separator-->
                    <!--begin::Breadcrumb-->
                    <ul class="breadcrumb breadcrumb-separatorless fw-bold fs-7 my-1">
                        <!--begin::Item-->
                        <li class="breadcrumb-item text-muted">
                            <a href="{{ path('app_admin_dashboard') }}" class="text-muted text-hover-primary">Accueil</a>
                        </li>
                        <!--end::Item-->
                        <!--begin::Item-->
                        <li class="breadcrumb-item">
                            <span class="bullet bg-gray-300 w-5px h-2px"></span>
                        </li>
                        <!--end::Item-->
                        <!--begin::Item-->
                        <li class="breadcrumb-item text-muted">Sécurité</li>
                        <!--end::Item-->
                        <!--begin::Item-->
                        <li class="breadcrumb-item">
                            <span class="bullet bg-gray-300 w-5px h-2px"></span>
                        </li>
                        <!--end::Item-->
                        <!--begin::Item-->
                        <li class="breadcrumb-item text-dark">Utilisateur</li>
                        <!--end::Item-->
                    </ul>
                    <!--end::Breadcrumb-->
                </div>
                <!--end::Page title-->

            </div>
            <!--end::Container-->
        </div>
        <!--end::Toolbar-->
        <div class="post d-flex flex-column-fluid" id="kt_post">
            <div id="kt_content_container" class="container d-flex flex-column flex-lg-row">
                       
                <div class="col flex-row-fluid" data-call-form="ajax">

                    <div class="card card-flush" data-menu="{% if idMenu is defined %}{{ idMenu }}{% endif %}">
                        <!--begin::Card header-->
                        <div class="card-header pt-7">
                            <!--begin::Card title-->
                            <div class="card-title">
                                <!--begin::Svg Icon | path: icons/duotune/communication/com005.svg-->
                                <span class="svg-icon svg-icon-1 me-2">
                                                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24"
                                                            viewBox="0 0 24 24" fill="none">
                                                            <path d="M20 14H18V10H20C20.6 10 21 10.4 21 11V13C21 13.6 20.6 14 20 14ZM21 19V17C21 16.4 20.6 16 20 16H18V20H20C20.6 20 21 19.6 21 19ZM21 7V5C21 4.4 20.6 4 20 4H18V8H20C20.6 8 21 7.6 21 7Z"
                                                                fill="currentColor"/>
                                                            <path opacity="0.3"
                                                                d="M17 22H3C2.4 22 2 21.6 2 21V3C2 2.4 2.4 2 3 2H17C17.6 2 18 2.4 18 3V21C18 21.6 17.6 22 17 22ZM10 7C8.9 7 8 7.9 8 9C8 10.1 8.9 11 10 11C11.1 11 12 10.1 12 9C12 7.9 11.1 7 10 7ZM13.3 16C14 16 14.5 15.3 14.3 14.7C13.7 13.2 12 12 10.1 12C8.10001 12 6.49999 13.1 5.89999 14.7C5.59999 15.3 6.19999 16 7.39999 16H13.3Z"
                                                                fill="currentColor"/>
                                                        </svg>
                                                    </span>
                                <!--end::Svg Icon-->
                                <h2>Modification de mot de passe</h2>
                            </div>
                            <!--end::Card title-->
                        </div>
                        <!--end::Card header-->
                        <!--begin::Card body-->
                        <div class="card-body pt-5">

                        {{ form_start(form) }}
                            <div>
                                
                                <div class="row">
                                    <div class="mb-5 fv-row fv-plugins-icon-container col">
                                        {{ form_label(form.oldPassword) }}
                                        {{ form_widget(form.oldPassword) }}
                                        {# <div class="fv-plugins-message-container invalid-feedback"></div> #}
                                    </div>
                                    <div class="mb-5 fv-row fv-plugins-icon-container col">
                                        {{ form_label(form.password.first) }}
                                        {{ form_widget(form.password.first) }}
                                        {{ form_errors(form.password.first) }}
                                        {# <div class="fv-plugins-message-container invalid-feedback"></div> #}
                                    </div>
                                    <div class="mb-5 fv-row fv-plugins-icon-container col">
                                        {{ form_label(form.password.second) }}
                                        {{ form_widget(form.password.second) }}
                                        {{ form_errors(form.password.second) }}
                                        {# <div class="fv-plugins-message-container invalid-feedback"></div> #}
                                    </div>
                                </div>
                                

                                <div class="mb-5 fv-row fv-plugins-icon-container">
                                    <div class="d-flex justify-content-end">
                                        <button type="submit" class="btn btn-warning ">
                                            <span class="indicator-label">
                                                Changer le mot de passe
                                            </span>
                                            <span class="indicator-progress">
                                                Veuillez patienter svp... 
                                                <span class="spinner-border spinner-border-sm align-middle ms-2"></span>
                                            </span>
                                        </button>
                                    </div>
                                </div>
                                
                            </div>
                        {{ form_end(form) }} 
                        </div>    
                    </div>

                </div>

            </div>
        </div>
    </div>
{% endblock %}


