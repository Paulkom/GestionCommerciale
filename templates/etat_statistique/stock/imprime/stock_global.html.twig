  <div class="row">
        <span style=" width:100%;">
            <div style="height: 90%;">

                {# *********// Titre //******** #}

                <table style="width: 100%;">
                    <tbody> 
                        <tr> 
                            <td style="text-align: left;  width: 100%; padding: 3px 1px;"> 
                               <p><img alt="entete" style="width: 100%;" src="{{asset('uploads/medias/societe/' ~ societe.entete.id ~ "." ~ societe.entete.extension )}}"></p> 
                            </td> 
                        </tr> 
                    </tbody>
                </table> 
                <div class="body-section">
                    <div style="margin-left: 10px;" class="row">
                        <table style="width: 100%;">
                            <tr style="margin-left: 10px;">  
                                <td style="text-align: right;" > 
                                    {{ (societe.lieuImpression is defined and societe.lieuImpression is not null) ? societe.lieuImpression ~ " le, " ~  "now" | date("d/m/Y") : " Date : " ~ "now" | date("d/m/Y") }}
                                </td>
                            </tr>
                            <tr>
                                <td style="text-align: center; "  >
                                    <p class="sub-heading"> 
                                        <b style="text-decoration: underline;">Mouvement Global du stock</b>
                                    </p>
                                </td>
                            </tr>
                            
                        </table>
                    </div>
                </div>

                {# *********// Entête  //******** #}
                {% for mag in magasins %}
                <table style="width:100%; margin-top: 10px;" class="bod">
                    <tbody> 
                        <tr>
                            <th class="bod">   {{ mag.magasin }} </th> 
                        </tr>
                        <tr> 
                            <td class="bod">
                                <table style="width:100%;" class="bod">
                                    <thead> 
                                        <tr style="background-color: #EBF5FF;" >
                                            <th class="bod" style="width:40%;">Produit</th>
                                            <th class="bod" >Stock Initial</th>
                                            <th class="bod" >Qté Appro</th>
                                            <th class="bod">Qté Livré</th>
                                            <th class="bod">Qté Vendu</th>
                                            <th class="bod">Qté Sortie</th>
                                            <th class="bod">Qté Retournée</th>
                                            <th class="bod">Stock Final</th>
                                        </tr> 
                                    </thead> 
                                    <tbody> 
                                        {% for d in mag.produitsMag %}
                                            <tr> 
                                                <td  class="bod">{{d.produit}}</td>
                                                <td align="right" class="bod">{{d.stockInitial|number_format(3, '.', ' ')}}</td>
                                                <td align="right" class="bod">{{d.qteAppro|number_format(3, '.', ' ')}}</td>
                                                <td align="right" class="bod">{{d.qteLivre|number_format(3, '.', ' ')}}</td>
                                                <td align="right" class="bod">{{d.qteVendu|number_format(3, '.', ' ')}}</td>
                                                <td align="right" class="bod">{{d.qteSortie|number_format(3, '.', ' ')}}</td>
                                                <td align="right" class="bod">{{d.qteRetou |number_format(3, '.', ' ')}}</td>
                                                <td align="right" class="bod">{{d.stockFinal |number_format(3, '.', ' ')}}</td>
                                            </tr>
                                        {% endfor %}
                                    </tbody>
                                </table>
                            </td>
                        </tr>
                    </tbody>
                </table>
                {% endfor %}
            
            <div style="margin-left: 10px; margin-right: 10px;">
                <hr align="center" style="height:2px; color: yellow; margin: 20px 0px 10px 0px;border-width:2px; border: thick double #32a1ce;" >
            </div>

