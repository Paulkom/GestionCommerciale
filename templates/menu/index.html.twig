{% block javascripts %}
    {{ parent() }}

    <script type="text/javascript">
        function showMenu(e) {
            e.preventDefault();
            const contenu = e.target.dataset.content;
            const idMenu = ($(contenu)[0]).dataset.menu;
            const menu = document.querySelector(`#${idMenu}`);
            menu.dataset.content = contenu;
            $(menu).trigger('click');
            menu.classList.remove('d-none');
        }
    </script>
{% endblock %}