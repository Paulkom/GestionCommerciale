{{ form_start(form) }}
<div class="d-flex flex-column gap-5">
    <div class="form-group row">
        <div class="col-md-2 box d-flex flex-column justify-content-center align-items-start">
            <label class="form-check form-check-sm form-check-custom form-check-solid float-start">
                {{ form_widget(form.active) }}
                <span class="form-check-label">
                    {{ form.active.vars.label }}
                </span>
            </label>
        </div>
        <div class="col-md-2 box d-flex flex-column justify-content-center align-items-start">
        </div>
        <div class="col-md-4"></div>
        <div class="col-md-4"></div>
    </div>
    <div class="form-group row">
        <div class="col-md-4">
            {{ form_label(form.menuSuperieur) }}
            {{ form_widget(form.menuSuperieur) }}
        </div>
        <div class="col-md-4">
            {{ form_label(form.sousTitre) }}
            {{ form_widget(form.sousTitre) }}
        </div>
        <div class="col-md-4">
            {{ form_label(form.titre) }}
            {{ form_widget(form.titre) }}
        </div>
    </div>
    <div class="form-group">
        {{ form_label(form.icon) }}
        {{ form_widget(form.icon) }}
    </div>
    <div class="form-group">
        {{ form_label(form.url) }}
        {{ form_widget(form.url) }}
    </div>

    <div class="separator mb-6"></div>
    <div class="d-flex justify-content-end">
        <!--begin::Button-->
        <button type="reset" data-kt-cond-type="cancel" class="btn btn-light me-3">Vider</button>
        <!--end::Button-->
        <!--begin::Button-->
        <button type="submit" data-kt-cond-type="submit" class="btn btn-primary">
            <span class="indicator-label">Enregistrer</span>
            <span class="indicator-progress">Veuillez patienter svp...
            <span class="spinner-border spinner-border-sm align-middle ms-2"></span>
        </span>
        </button>
        <!--end::Button-->
    </div>
</div>
{{ form_end(form) }}
